<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="HomeActivity"
            type="com.example.iseungcheon.wanhea.HomeActivity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".HomeActivity"
        tools:showIn="@layout/app_bar_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#CCDDDD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광고/이벤트" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#0000DD">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="검색기능" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4">

                <Button
                    android:id="@+id/top_btn"
                    android:text="상의"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:tag="1"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />

                <Button
                    android:id="@+id/pants_btn"
                    android:text="바지"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:tag="2"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />

                <Button
                    android:id="@+id/skirt_btn"
                    android:text="스커트"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:tag="3"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4">

                <Button
                    android:id="@+id/onepice_btn"
                    android:text="원피스"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:tag="4"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />

                <Button
                    android:id="@+id/acc_btn"
                    android:text="악세사리"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:tag="5"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />

                <Button
                    android:id="@+id/bag_btn"
                    android:text="가방"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:tag="6"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4">

                <Button
                    android:id="@+id/curtain_btn"
                    android:text="커텐"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:tag="7"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />

                <Button
                    android:id="@+id/doll_btn"
                    android:text="인형"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:tag="8"
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />

                <Button
                    android:id="@+id/etc_btn"
                    android:text="기타"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:tag=""
                    android:onClick="@{HomeActivity::onButtonClick}"
                    />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:background="#00FDDD">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="매거진" />

        </LinearLayout>


    </LinearLayout>
</layout>